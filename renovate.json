{
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["kiltprotocol"],
      "groupName": "kiltprotocol"
    },
    {
      "matchPackagePatterns": ["polkadot"],
      "excludePackageNames": [
        "@polkadot/extension-inject",
        "@polkadot/ui-shared"
      ],
      "groupName": "polkadot"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
