{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "outDir": "dist/js",
    "strict": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "./src/testing/jest.setup.ts"
  ]
}
