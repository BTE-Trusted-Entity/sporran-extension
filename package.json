{
  "name": "sporran-extension",
  "private": true,
  "version": "1.0.0",
  "description": "KILT browser extension, to manage identities and send / receive tokens.",
  "license": "BSD-4-Clause",
  "homepage": "https://github.com/KILTprotocol/sporran-extension",
  "keywords": [
    "kilt",
    "cryptocurrency",
    "blockchain",
    "polkadot",
    "substrate",
    "webextension",
    "browser-extension"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:KILTprotocol/sporran-extension.git"
  },
  "bugs": {
    "url": "https://github.com/KILTprotocol/sporran-extension/issues"
  },
  "type": "module",
  "engines": {
    "node": ">= v18.13.0"
  },
  "scripts": {
    "build": "env NODE_ENV=production webpack",
    "package": "cd dist && web-ext build --overwrite-dest",
    "dev": "env VARIANT=internal NODE_ENV=development webpack --watch",
    "dev-public": "env VARIANT=public NODE_ENV=development webpack --watch",
    "identity": "node -e \"console.log(require('@polkadot/util-crypto').mnemonicGenerate())\"",
    "test": "node --no-compilation-cache --expose-gc node_modules/.bin/jest --logHeapUsage",
    "test-size": "bundlewatch --config bundlewatch.config.json",
    "lint": "yarn run lint-css && yarn run lint-js",
    "lint-js": "eslint --fix --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint \"src/**/*.css\"",
    "css": "tcm --namedExports --pattern 'src/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "storybook": "NODE_OPTIONS=--openssl-legacy-provider start-storybook --port 6006 --modern",
    "open-firefox": "web-ext run --source-dir dist",
    "open-chrome": "node scripts/chrome-launch.js",
    "version": "BEFORE=$(jq --raw-output .version src/static/manifest.json) && AFTER=$(date +%Y.%-m.%-d) && grep --files-with-matches --recursive $BEFORE src | xargs sed --in-place \"s/$BEFORE/$AFTER/g\" && git checkout -b version-bump && git commit --all --message=\"Version $AFTER\""
  },
  "dependencies": {
    "@kiltprotocol/chain-helpers": "0.30.0",
    "@kiltprotocol/config": "^0.30.0",
    "@kiltprotocol/core": "0.30.0",
    "@kiltprotocol/did": "0.30.0",
    "@kiltprotocol/messaging": "0.30.0",
    "@kiltprotocol/types": "0.30.0",
    "@kiltprotocol/utils": "0.30.0",
    "@polkadot/extension-inject": "^0.44.6",
    "@polkadot/keyring": "^10.1.11",
    "@polkadot/types": "^9.5.2",
    "@polkadot/ui-shared": "^2.9.13",
    "@polkadot/util": "^10.1.11",
    "@polkadot/util-crypto": "^10.1.11",
    "@polkadot/x-textdecoder": "^10.1.11",
    "@polkadot/x-textencoder": "^10.1.11",
    "bn.js": "^5.2.1",
    "classnames": "^2.3.2",
    "ky": "^0.33.2",
    "lodash-es": "^4.17.21",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-accessible-dropdown-menu-hook": "^3.2.0",
    "react-dialog-polyfill": "^1.1.6",
    "react-dom": "^18.2.0",
    "react-router-dom": "^5.3.4",
    "swr": "^2.0.3",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-controls": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-toolbars": "^6.5.16",
    "@storybook/addon-viewport": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/ed2curve": "^0.2.2",
    "@types/jest": "^29.4.0",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^29.4.1",
    "babel-loader": "^9.1.2",
    "buffer": "^6.0.3",
    "bundlewatch": "^0.3.3",
    "chrome-extension-i18n-shim": "^1.0.0",
    "chrome-launch": "^1.1.4",
    "copy-webpack-plugin": "^11.0.0",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^6.7.3",
    "dialog-polyfill": "^0.5.6",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "mini-css-extract-plugin": "^2.7.2",
    "prettier": "^2.8.3",
    "process": "^0.11.10",
    "react-router": "^5.3.4",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.16.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-standard": "^29.0.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typed-css-modules": "^0.7.2",
    "typescript": "^4.9.4",
    "typescript-plugin-css-modules": "^4.1.1",
    "web-ext": "^7.5.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-extension-reloader": "^1.1.4",
    "webpack-merge": "^5.8.0"
  }
}
