{
  "name": "sporran-extension",
  "private": true,
  "version": "1.0.0",
  "description": "KILT browser extension, to manage identities and send / receive tokens.",
  "license": "BSD-4-Clause",
  "homepage": "https://github.com/KILTprotocol/sporran-extension",
  "keywords": [
    "kilt",
    "cryptocurrency",
    "blockchain",
    "polkadot",
    "substrate",
    "webextension",
    "browser-extension"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:KILTprotocol/sporran-extension.git"
  },
  "bugs": {
    "url": "https://github.com/KILTprotocol/sporran-extension/issues"
  },
  "type": "module",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "build": "env NODE_ENV=production webpack",
    "package": "cd dist && web-ext build --overwrite-dest",
    "dev": "env VARIANT=internal NODE_ENV=development webpack --watch",
    "dev-public": "env VARIANT=public NODE_ENV=development webpack --watch",
    "test": "jest",
    "lint": "yarn run lint-css && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint \"src/**/*.css*\"",
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "storybook": "start-storybook --port 6006",
    "open-firefox": "web-ext run --source-dir dist",
    "open-chrome": "node scripts/chrome-launch.js"
  },
  "dependencies": {
    "@kiltprotocol/core": "0.24.0-3",
    "@kiltprotocol/messaging": "0.24.0-3",
    "@polkadot/extension-inject": "^0.40.3",
    "@polkadot/ui-shared": "^0.85.4",
    "bn.js": "^4.12.0",
    "classnames": "^2.3.1",
    "lodash-es": "^4.17.21",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-accessible-dropdown-menu-hook": "^3.1.0",
    "react-dialog-polyfill": "^1.0.5",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-spinners": "^0.10.6",
    "swr": "^1.0.1",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-controls": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-toolbars": "^6.3.8",
    "@storybook/addon-viewport": "^6.3.8",
    "@storybook/builder-webpack5": "^6.3.8",
    "@storybook/manager-webpack5": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@testing-library/dom": "^8.7.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.1",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.2",
    "@types/lodash-es": "^4.17.5",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.2.4",
    "babel-loader": "^8.2.2",
    "buffer": "^6.0.3",
    "chrome-extension-i18n-shim": "^1.0.0",
    "chrome-launch": "^1.1.4",
    "copy-webpack-plugin": "^9.0.0",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.2.4",
    "jest-css-modules": "^2.1.0",
    "prettier": "^2.4.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "typescript-plugin-css-modules": "^3.4.0",
    "web-ext": "^6.4.0",
    "webpack": "^5.55.1",
    "webpack-cli": "^4.8.0",
    "webpack-extension-reloader": "^1.1.4",
    "webpack-merge": "^5.8.0"
  }
}
