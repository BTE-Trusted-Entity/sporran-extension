{
  "name": "sporran-extension",
  "private": true,
  "version": "1.0.0",
  "description": "KILT browser extension, to manage identities and send / receive tokens.",
  "license": "BSD-4-Clause",
  "homepage": "https://github.com/KILTprotocol/sporran-extension",
  "keywords": [
    "kilt",
    "cryptocurrency",
    "blockchain",
    "polkadot",
    "substrate",
    "webextension",
    "browser-extension"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:KILTprotocol/sporran-extension.git"
  },
  "bugs": {
    "url": "https://github.com/KILTprotocol/sporran-extension/issues"
  },
  "type": "module",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "package": "cd dist && web-ext build --overwrite-dest",
    "dev": "env VARIANT=internal webpack --watch --config webpack.dev.js",
    "dev-public": "env VARIANT=public webpack --watch --config webpack.dev.js",
    "test": "jest",
    "lint": "yarn run lint-css && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint \"src/**/*.css*\"",
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "storybook": "start-storybook --port 6006",
    "open-firefox": "web-ext run --source-dir dist",
    "open-chrome": "node scripts/chrome-launch.js"
  },
  "dependencies": {
    "@kiltprotocol/core": "^0.23.0-beta.2",
    "@kiltprotocol/messaging": "^0.23.0-beta.2",
    "@polkadot/extension-inject": "^0.38.8",
    "@polkadot/ui-shared": "^0.83.1",
    "bn.js": "^5.2.0",
    "classnames": "^2.3.1",
    "lodash-es": "^4.17.21",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-accessible-dropdown-menu-hook": "^2.3.0",
    "react-dialog-polyfill": "^1.0.5",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-spinners": "^0.10.6",
    "swr": "^0.5.6",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@storybook/addon-actions": "^6.3.3",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-controls": "^6.3.3",
    "@storybook/addon-links": "^6.3.3",
    "@storybook/addon-toolbars": "^6.3.4",
    "@storybook/addon-viewport": "^6.3.3",
    "@storybook/react": "^6.3.3",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.24",
    "@types/lodash-es": "^4.17.4",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "chrome-extension-i18n-shim": "^1.0.0",
    "chrome-launch": "^1.1.4",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5.2.6",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.0.6",
    "jest-css-modules": "^2.1.0",
    "prettier": "^2.3.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^8.3.0",
    "typescript": "^4.3.5",
    "typescript-plugin-css-modules": "^3.4.0",
    "url-loader": "^4.1.1",
    "web-ext": "^6.2.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^4.7.2",
    "webpack-extension-reloader": "^1.1.4",
    "webpack-merge": "^5.8.0"
  }
}
